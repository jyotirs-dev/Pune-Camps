<% include ../partials/header %>

<div class="container">
     
          <div class="card">
               <h2 class="text-center">Change Password</h2>  
           <div class="card-body" style="width:30%; margin:20px auto;">
    <form action="change/<%currentuser.username%>" method="post">
             
        <div class="form-group">
              <label for="username">User Name</label>
            <input type="text" id="username" class="form-control" placeholder="Username" name= "username" required="required">
        </div>
        <div class="form-group">
              <label for="oldpwd">Old Password</label>
            <input type="password" id="oldpwd" class="form-control" placeholder="Password" name="oldpassword" required="required">
        </div>
        <div class="form-group">
              <label for="newpwd">New password</label>
            <input type="password" id="newpwd" class="form-control" placeholder="Password" name="newpassword" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Change Password</button>
        </div>
             
    </form>
   
    </div>
    </div>
</div



