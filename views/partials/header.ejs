    <body>
        <nav class="navbar navbar-default ">
            <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">PuneCamps</a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#toggleitems" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        </button>
                    </div>
        
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="toggleitems">
        <!--         <ul class="nav navbar-nav">-->
        <!--<li><a href="/campgrounds">Explore <span class="sr-only">(current)</span></a></li>-->
        <!--</ul>-->
              <ul class="nav navbar-nav navbar-right">
                <% if(!currentuser){ %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Signup</a></li>
                <% }else{ %>
                    <li><a href="/change/<%=currentuser.username%>"><%= currentuser.username %></a></li>
                    <li><a href="/logout">Logout</a></li>
                <%    } %>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
        <div class="container">
            <% if(error && error.length>0){ %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } %>
            <% if(success && success.length>0){ %>
            <div class="alert alert-success" role="alert"><%= success %></div>
            <% } %>
        </div>