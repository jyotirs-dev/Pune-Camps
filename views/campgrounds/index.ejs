<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
   <div class="container">
      <h1>Welcome to PuneCamps</h1>
      <p>All the best camps in Pune!</p>
      <p><a class="btn btn-primary btn-sm" href="/campgrounds/new">Add New Campgrounds</a></p>
   </div>
   
</header>

<div class="row" style="text-align: center; display:flex; flex-wrap:wrap;">
   
      <% camps.forEach(function(camp){ %>
         <div class= "col-md-3 col-sm-6">
            <div class="thumbnail">
               <img id="high" src = "<%= camp.img %>">
               <div class="caption"> 
                 <h4><%= camp.name %> </h4>
               </div>
               <p><a class="btn btn-primary btn-sm" href="/campgrounds/<%= camp._id %>">More Info</a></p>
            </div>
         </div>
         
      <% }) %>
      
</div>



</div>
<% include ../partials/footer %>