        <div style="width:30%; margin:20px auto;">
            <form action="/campgrounds/<%= show_camp._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <label for="Inputname">Camp Name</label>
                <input class="form-control" id="Inputname" type="text" name="editedcamp[name]" value= "<%= show_camp.name %>">
              </div>
              <div class="form-group">
                <label for="Inputimage">Camp Image</label>
                <input class="form-control" id="Inputimage" type = "text" name="editedcamp[img]" value="<%= show_camp.img %>">
              </div>
              <div class="form-group">
                <label for="InputPrice">Camp Price per Night</label>
                <input class="form-control" id="InputPrice" type = "number" name="editedcamp[price]" min="100" max="10000" step="10">
              </div>
              <div class="form-group">
                <label for="InputDesc">Camp Description</label>
                <input class="form-control" id="InputDesc" type = "text" name="editedcamp[description]" value="<%=show_camp.description %>">
              </div>
              <div class="form-group">
              <button type="submit" class="btn btn-default btn-block btn-primary">Submit</button>
              </div>
            </form> 
            <a href="/campgrounds">Go back</a>
        </div>
        
        
    </div>
</div>
